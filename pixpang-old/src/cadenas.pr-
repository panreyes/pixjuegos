Global
	finished;
	fp;
End

Process lee_cadenas();
Private
	num;
	string devnull;
	notx;
Begin
	while(glob("lng/*.lng")!="" and notx<30)
		fichero_lng[notx]=substr(fileinfo.name,0,len(fileinfo.name)-4);
		notx++;
	end
	fp = fopen("lng/"+fichero_lng[ops.op_lang]+".lng", O_READ);
	from num=0 to 118; 
		if(num==54) devnull=fgets(fp); end 
		textos[num]=fgets(fp); 
		//textos[num]=substr(textos[num],0,len(textos[num]));
	end
	fclose(fp);
	frame;
End