
//-----------------------------------------------------------------------
// Maneja la barra del boss
//-----------------------------------------------------------------------
process barra_boss();

private

vida_boss_max;
begin
	x=512;
	y=755;
	z=-110;
	graph=99;
	region=4;
	vida_boss_max=vida_boss;
	file=fpg_nave;
	objeto(x,y,98,file,size,flags);
	loop
		define_region(4,262,700,vida_boss*500/vida_boss_max,100);
		frame;
	end
end

