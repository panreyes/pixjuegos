process menu();
private
	tec;
	keytime;
	tec2;
	continuable;
begin
	file=fpg_menu;
	delete_text(all_text);
	let_me_alone();
	reinicia_variables();
	jugador=1;
	controlador(0);
	musica("2");
	graph=1;
	x=320;
	y=240;
	
	traducciones_menu();
	
	if(arcade_mode)
		put_screen(fpg_menu,1);
		graph=0;
		write(fnt_intro,320,240,4,"Pulsa el boton 2 para empezar");
		while(p[0].botones[b_aceptar]) frame; end
		while(!p[0].botones[b_aceptar])
			if(p[0].botones[b_salir]) exit(); end
			frame; 
		end
		while(p[0].botones[b_aceptar]) frame; end
		
		delete_text(all_text);
		put_screen(fpg_menu2,21);
		while(p[0].botones[b_1] or p[0].botones[b_2] or p[0].botones[b_3]) frame; end
		while(!(p[0].botones[b_1] or p[0].botones[b_2] or p[0].botones[b_3])) 
			if(p[0].botones[b_salir]) exit(); end
			frame; 
		end
		while(p[0].botones[b_1] or p[0].botones[b_2] or p[0].botones[b_3]) frame; end
		
		put_screen(fpg_menu,1);

		delete_text(all_text);
		elecpersonaje();
		return;
	end
	
	elecc=0;
	lista(1);
	logo(2);
	machango();
	from i=0 to 20;
		elep();
	end
	if(file_exists(savegamedir+"partida.dat")); continuable=1; end

	keytime=10;
	loop
		if(elecc==6)
			elecc=0;
		end
		if(elecc==-1)
			elecc=5;
		end
		if(keytime>0)
			keytime--;
		end
		//elige algo
		if((p[0].botones[b_aceptar] or key(_enter)) and keytime==0)
			if(ops.sonido==1)
				sonido(3);
			end
			if(elecc==0)
				let_me_alone();
				back(1);
				elecpersonaje();
				break;
			end
			if(elecc==1)
				let_me_alone();
				fondo_elecpersonaje_continuar();
				cargar_partida();
				break;
			end
			if(elecc==2)
				let_me_alone();
				opcion();
				break;
			end
/*			if(elecc==3)
				let_me_alone();
				back(20);
				break;
			end*/
			if(elecc==3)
				let_me_alone();
				back(200);
				break;
			end
			if(elecc==4)
				guarda_opciones();
 				if(os_id==0 or os_id==os_wii)
 					shell("http://pixjuegos.com");
				elseif(os_id==1003)
					exec(_P_NOWAIT, "http://www.pixjuegos.com", 0, 0);
 				else
					shell("x-www-browser http://pixjuegos.com &");
 				end
				exit(0);
			end
			if(elecc==5)
				guarda_opciones();
				frame(300);
				exit(0);
			end
		end
		if(p[0].botones[3])
			if(tec==0)
				elecc++;
				if(elecc==1 and !continuable)
					elecc++;
				end
				if(ops.sonido==1)
					sonido(2);
				end
				tec=1;
			end
		else
			tec=0;
		end
		if(p[0].botones[2])
			if(tec2==0)
				elecc--;
				if(elecc==1 and !continuable)
					elecc--;
				end
				if(ops.sonido==1)
					sonido(2);
				end
				tec2=1;
			end
		else
			tec2=0;
		end
		frame;
	end
end

