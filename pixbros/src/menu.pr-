process opcion();
private
	tec;
	tec2;
	tecenter;
begin
	file=fpg_menu;
	elecc=0;
	jugador=1;
	controlador(0);
	back(1);
	lista(2);
	logo(105);
	machango();
	from i=0 to 20; elep(); end
	tecenter=1;
	loop
		if(ops.dificultad==0)
			ponimgn(100,300,100,250);
		end
		if(ops.dificultad==1)
			ponimgn(115,300,100,251);
		end
		if(ops.dificultad==2)
			ponimgn(130,300,100,252);
		end
		if(p[0].botones[b_aceptar])
			if(tecenter==0)
				if(elecc==0)
					if(os_id==1003)
						full_screen=1;
						if(ops.ventana==0)
							ops.ventana=1;
							scale_resolution_aspectratio=SRA_PRESERVE;
						else
							ops.ventana=0;
							scale_resolution_aspectratio=SRA_STRETCH;
						end
					else
						if(full_screen==0)
							full_screen=1;
							ops.ventana=0;
						else
							full_screen=0;
							ops.ventana=1;
						end
					end
					set_mode(640,480,bpp);
				end
				if(elecc==1)
					if(ops.sonido==1)
						ops.sonido=0;
					else
						ops.sonido=1;
						sonido(2);
					end
				end
				if(elecc==2)
					if(ops.musica==1)
						ops.musica=0;
						musica("2");
					else
						ops.musica=1;
						musica("2");
					end
				end
				if(elecc==3)
					ops.dificultad++;
					if(ops.dificultad==3)
						ops.dificultad=0;
					end
				end
			end
			tecenter=1;
		else
			tecenter=0;
		end //enter

		if((p[1].botones[3] or p[2].botones[3] or p[3].botones[3]))
			if(tec==0)
				if(ops.sonido==1)
					sonido(2);
				end
				elecc++;
				tec=1;
			end
		else
			tec=0;
		end
		if((p[1].botones[2] or p[2].botones[2] or p[3].botones[2]))
			if(tec2==0)
				if(ops.sonido==1)
					sonido(2);
				end
				elecc--;
				tec2=1;
			end
		else
			tec2=0;
		end
		if(elecc==4)
			elecc=0;
		end
		if(elecc==-1)
			elecc=3;
		end
		frame;
	end
end

